    <style name="PSButton.Radio.Custom" parent="Widget.AppCompat.CompoundButton.RadioButton">
        <item name="colorAccent">@color/colorAccentButton</item>
        <item name="android:textColorPrimaryDisableOnly">@color/colorPrimary</item>
        <item name="android:textAppearance">@style/TextAppearance.AppCompat</item>
    </style>

    <style name="PSButton.Switch.Custom" parent="Theme.AppCompat.Light">
        <item name="colorControlActivated">@color/colorCheckboxTint</item>
        <item name="colorSwitchThumbNormal">@color/colorPrimary</item>
        <item name="android:colorForeground">@color/colorCheckboxDefaultNormal</item>
    </style>

    <!-- PS Custom Alert Dialog -->
    <style name="AlertDialogFullScreen" parent="@android:style/Theme.Light.NoTitleBar.Fullscreen">
        <item name="android:background">@color/md_white_1000</item>
        <item name="android:layout_gravity">center</item>
        <item name="android:textColor">@color/md_grey_800</item>
        <item name="android:textStyle">bold</item>
        <item name="android:headerDividersEnabled">true</item>
        <item name="android:typeface">normal</item>
        <item name="android:textColorPrimary">@color/md_grey_800</item>
        <item name="android:windowTitleStyle">@null</item>
    </style>

    <style name="AlertDialogPrimary" parent="@style/Theme.AppCompat.Light.Dialog.Alert">
        <item name="android:textColor">@color/md_white_1000</item>
        <item name="android:textColorPrimary">@color/md_white_1000</item>
        <item name="textColorAlertDialogListItem">@color/md_white_1000</item>
        <item name="android:textStyle">bold</item>
        <item name="android:headerDividersEnabled">true</item>
        <item name="android:typeface">normal</item>
        <item name="android:background">@color/colorPrimary</item>
        <item name="buttonBarNegativeButtonStyle">@style/NegativeButtonStyle</item>
        <item name="buttonBarPositiveButtonStyle">@style/PositiveButtonStyle</item>
    </style>

    <style name="AlertDialogAccent" parent="@style/Theme.AppCompat.Light.Dialog.Alert">
        <item name="android:textColor">@color/md_white_1000</item>
        <item name="android:textColorPrimary">@color/md_white_1000</item>
        <item name="textColorAlertDialogListItem">@color/md_white_1000</item>
        <item name="android:textStyle">bold</item>
        <item name="android:headerDividersEnabled">true</item>
        <item name="android:typeface">normal</item>
        <item name="android:background">@color/colorAccent</item>
        <item name="buttonBarNegativeButtonStyle">@style/NegativeButtonStyle</item>
        <item name="buttonBarPositiveButtonStyle">@style/PositiveButtonStyle</item>
    </style>

    <style name="NegativeButtonStyle" parent="Widget.AppCompat.Button.ButtonBar.AlertDialog">
        <item name="android:textColor">@color/md_white_1000</item>
    </style>

    <style name="PositiveButtonStyle" parent="Widget.AppCompat.Button.ButtonBar.AlertDialog">
        <item name="android:textColor">@color/md_white_1000</item>
    </style>

    <style name="PSButton.Fab.Custom" parent="Base.Theme.AppCompat.Light">
        <item name="colorAccent">@color/colorAccent</item>
    </style>


